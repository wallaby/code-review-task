<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListItemName">
        <item name="android:textSize">@dimen/item_header_text_size</item>
        <item name="android:textColor">@color/accentedTextColor</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textSize">@dimen/item_description_text_size</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
